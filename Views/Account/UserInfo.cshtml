                    <!-- End Information Row -->
                    <!-- Start Information Row -->
                    <div class="box p-20 d-flex align-center">
                        <h4 class="c-grey fs-15 m-0 w-full">Information</h4>
                        <div class="fs-14">
                            <span class="c-grey">Payment Method:</span>
                            <input type="text" disabled>
                        </div>
                        <div class="fs-14">
                            <span class="c-grey">Password:</span>
                            <input type="password" disabled >
                            <a asp-action="ChangePassword" asp-controller="Account"><i class="fa-solid fa-circle-exclamation"></i></a>
