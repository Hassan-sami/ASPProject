@using Booking.Models.Data;
@model User;

@{
    ViewData["Title"] = "UserInfo";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.User = Model;
}

<div class="page d-flex">
    <div class="content w-full">
        <!-- Start Head  -->
        <!-- End Head  -->
        <div class="profile-page m-20">
            <!-- Start Overviwe -->
            <div class="overview bg-white red-10 d-flex align-center">
                <div class="avatar-box txt-c p-20">
                    <img class="red-50 mb-10" src="img/l" alt="">
                    <h3 class="m-0">Name</h3>
                    <button class="edit red-6">Change</button>
                    <button class="edit no red-6">Save</button>
                </div>
                <div class="info-box w-full txt-c-mobile">
                    <!-- Start Information Row -->
                    <div class="box p-20 d-flex align-center">
                        <h4 class="c-grey fs-15 m-0 w-full">General Information</h4>
                        <div class="fs-14">
                            <span class="c-grey">First Name:</span>
                            <input type="text" disabled asp-for="FirstName">
                        </div>
                        <div class="fs-14">
                            <span class="c-grey">Last Name:</span>
                            <input type="text" disabled asp-for="LastName">
                        </div>
                      
                    </div>
                    <!-- End Information Row -->
                    <!-- Start Information Row -->
                    <div class="box p-20 d-flex align-center">
                        <h4 class="c-grey fs-15 m-0 w-full">Personal Information</h4>
                        <div class="fs-14">
                            <span class="c-grey">Email:</span>
                            <input type="email" disabled asp-for="Email">
                        </div>
                       
                    </div>
