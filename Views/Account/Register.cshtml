@model Booking.viewModel.RegisterViewModel
@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Register";
}

<div class="box-three">
    <form asp-action="Register" asp-controller="Account" >
        <div asp-validation-summary="All" class="text-danger"></div>

        <label class="l-1" asp-for="FirstName"></label> <br>
        <input class="text" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>


        <label class="l-1" asp-for="LastName"></label> <br>
        <input class="text" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>

        <label class="l-1" asp-for="UserName"></label> <br>
        <input class="text" asp-for="UserName">
        <span asp-validation-for="UserName" class="text-danger"></span>

        <label class="l-3"  asp-for="Email">Email Address</label> <br>
        <input class="em" type="email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label class="l-2" asp-for="Password"></label> <br>
        <input class="pass" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <label class="l-2" asp-for="ConfirmPassword"></label> <br>
        <input class="pass" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <input class="sub" type="submit" value="Sign Up" >
        <p>Have Account? <a asp-action="LogIn" asp-controller="Account">Sign in</a></p>

    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}