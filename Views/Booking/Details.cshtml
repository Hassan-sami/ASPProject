@using Booking.viewModel;
@model DetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_BookLayout.cshtml";
    ViewBag.User = Model.User;
    var Data = new Dictionary<string, string>
    {
        {"UserId", Model.User.Id},
        {"HotelId",$"{Model.HotelId }"},
        {"CheckIn",$"{Model.CheckIn}"},
        {"CheckOut",$"{Model.CheckOut}"}

    };
}

   


<div class="all-one">
    <div class="row">
        <form id="form" asp-action="ConfirmHotel" asp-controller="Booking" asp-route-RoomsId="@Model.RoomsId" asp-all-route-data="Data">



            <div class="fly col-lg-12">
                <div class="row" id="main">

                    <div class="one col-lg-6">
                        <label>Name</label>

                    </div>
                    <div class="two col-lg-6">

                        <label>@Model.User.FirstName</label>

                    </div>
                    <div class="three col-lg-6">
                        <label>City</label>
                    </div>

                    <div class="four col-lg-6" >
                        <label>@Model.CityName</label>
                    </div>

                    <div class="five col-lg-6">
                        <label>Hotel</label>
                    </div>
                    <div class="six col-lg-6">
                        <label>@Model.HotelName</label>
                    </div>
                    <div class="seven col-lg-6">
                        <label>Total price</label>
                    </div>

                    <div class="seven col-lg-6">
                        <label>@Model.TotalPrice</label>
                    </div>
                    <div class="seven col-lg-6">
                        <label> Chick in</label>
                    </div>

                    <div class="seven col-lg-6">
                        <label>@Model.CheckIn.Date.ToString("yyyy-MM-dd")</label>
                    </div>
                    
                       
                    <div class="seven col-lg-6">
                        <label>Check out</label>
                    </div>

                    <div class="seven col-lg-6">
                        <label>@Model.CheckOut.Date.ToString("yyyy-MM-dd")</label>
                    </div>
                        
                    
                    <div class="save col-lg-3">
                        <input type="submit" value="Confirm">
                    </div>
                    <div class="save col-lg-3">
                    </div>
                    <div class="seven col-lg-6">
                        <label><a asp-action="BookHotel" asp-controller="Booking">Go Back</a></label>
                    </div>
                    <div class="seven col-lg-6">
                        @foreach(var key in Model.RoomsId.Keys)
                        {
                            <input type="hidden" asp-for="RoomsId[key]" value="@Model.RoomsId[key]" />
                        }

                    </div>

                </div>
            </div>

        </form>
    </div>
</div>
